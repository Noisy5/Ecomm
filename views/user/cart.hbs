<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>

</head>
<body>
    <div class="body4">
  <div class="container mt-5 p-3 rounded cart">
        <div class="row no-gutters">
            <div class="col-md-8">
                <div class="product-details mr-2">
                    <div class="d-flex flex-row align-items-center"><i class="fa fa-long-arrow-left"></i> <a href="/ " class="ml-2">Continue Shopping</a>
                    </div>
                    <hr>
                    <h6 class="mb-0">Shopping cart</h6>
                    <div class="d-flex justify-content-between"><span></span>
                        <div class="d-flex flex-row align-items-center"><span class="text-black-50">Sort by:</span>
                            <div class="price ml-2"><span class="mr-1">price</span><i class="fa fa-angle-down"></i></div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-3 p-2 items rounded">
                        <div class="d-flex flex-row"><img class="rounded" src="/images/product/{{product._id}}.jpg" width="40">
                            <div class="ml-2"><span class="font-weight-bold d-block">{{product.name}}</span><span class="spec">{{product.Brand}}</span></div>
                        </div>
                        <div class="d-flex flex-row align-items-center"><span class="d-block">2</span><span class="d-block ml-5 font-weight-bold">{{product.Price}}.â‚¹</span><i class="fa fa-trash-o ml-3 text-black-50"></i></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="payment-info">
                <div class="main">
    <h2>Check Out</h2><br>
    <h5>Order Id : <span id="orderid">{{order.id}}</span></h5><br>
    <h5>Amount : <span id="amount">{{order.amount}}</span>
    <span id="amounts"></span></h5>
    <button onclick="payNow()" class="rzp-button">Pay with Razorpay</button><br>
  
</div>

<script>
    let id = document.getElementById('orderid').innerHTML;
    var  amount = document.getElementById('amount').innerHTML;
    document.getElementById('amounts').innerHTML = amount/100;
    var options = {
    "key": "rzp_test_9lippGn0j5aik2", 
    "amount": amount, 
    "currency": "INR",
    "name": "Acme Corp",
    "description": "Test Transaction",
    "image": "https://example.com/your_logo",
    "order_id": id,     
    "handler": function (response){
        pay(response);
    },
    "prefill": {
        "name": "Gaurav Kumar",
        "email": "gaurav.kumar@example.com",
        "contact": "9000090000"
    },
    "notes": {
        "address": "Razorpay Corporate Office"
    },
    "theme": {
        "color": "#3399cc"
    }
};
var rzp1 = new Razorpay(options);
rzp1.on('payment.failed', function (response){
        alert(response.error.code);
        alert(response.error.description);
        alert(response.error.source);
        alert(response.error.step);
        alert(response.error.reason);
        alert(response.error.metadata.order_id);
        alert(response.error.metadata.payment_id);
});
function payNow(){
    console.log("clicked")
    rzp1.open();
    e.preventDefault();
}
    function pay(response) {
        $.post('/verify',
        data = {
            response
        },function(data,status){
            console.log(data)
            window.location.href="/"
        }
        )
}
</script>
</body>

